    {
      link: 'https://support.apple.com/en-by/guide/safari/sfri40598/mac',
      img: 'safari',
      name: 'Apple Safari',
      color: '#00A0E6',
    },
    {
      link: 'https://www.opera.com/',
      img: 'opera',
      name: 'Opera',
